<DocsHeader as |header|>
  {{#header.link 'diagnostic'}}
    Diagnostic
  {{/header.link}}

  {{#if (sound-is-playing (current-sound))}}
    <button
      {{on 'click' (toggle-play-sound (current-sound))}}
      type='button'
      class='ui-button'
    >
      Pause
    </button>
  {{/if}}

</DocsHeader>
<DocsViewer as |viewer|>
  <viewer.nav @media={{this.media}} as |nav|>
    {{nav.section 'Diagnostic'}}
    {{nav.item 'Main' 'diagnostic.index'}}
    {{nav.item 'Sync' 'diagnostic.sync'}}
  </viewer.nav>

  <viewer.main @media={{this.media}}>
    {{outlet}}
  </viewer.main>
</DocsViewer>