<DocsDemo as |demo|>
  <demo.example @name="stereo-helpers.hbs" style="display: grid; grid-auto-flow: column;">

    {{#let this.onDemandUrl as |url|}}
      <button type="button" {{on 'click' (fastforward-sound url increment=5000)}} disabled={{not (sound-is-rewindable url)}}>
        {{svg-jar "skip-backward" height=20 width=30 title="Skip Forward"}}
      </button>

      <button type="button" {{on 'click' (toggle-play-sound url)}} >
        {{#if (sound-is-playing url)}}
          {{svg-jar "pause" height=20 width=30 title="Pause"}}
        {{else if (sound-is-loaded url)}}
          {{svg-jar "resume" height=20 width=30 title="Pause"}}
        {{else if (sound-is-loading url)}}
          {{svg-jar "loading" height=20 width=30 title="Loading" class="icon-spin"}}
        {{else}}
          {{svg-jar "play" height=20 width=30  title="Play"}}
        {{/if}}
      </button>

      <button type="button" {{on 'click' (fastforward-sound url increment=5000)}} disabled={{not (sound-is-fastforwardable url)}}>
        {{svg-jar "skip-forward" height=20 width=30 title="Skip Forward"}}
      </button>

      {{sound-position url format='time'}}

      <Input type="range" @value={{sound-position url format='percentage'}} {{on 'change' (seek-sound url)}} disabled={{not (sound-is-seekable url)}}/>

      {{sound-duration url format='time'}}

      {{sound-error-details url}}
    {{/let}}
  </demo.example>

  {{demo.snippet "stereo-helpers.hbs"}}
  {{demo.snippet "application-controller.js"}}
</DocsDemo>