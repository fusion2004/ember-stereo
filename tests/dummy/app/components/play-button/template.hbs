<button class="hifi-play-button" {{hifi-control @url}}>
  {{#if (is-playing @url)}}
    <HifiVisualizer @url={{@url}}  @type='dualbars' @colors={{array 'aqua' 'aqua'}} {{did-insert this.resizeCanvas 1}}/>
  {{/if}}

  <div class="hifi-play-button-bg"></div>
  {{#if (is-playing @url)}}
    <FaIcon @icon="pause" @size="2x"/>
  {{else if (is-playing-elsewhere @url)}}
    <FaIcon @icon="pause" @size="2x"/>
  {{else if (is-loading @url)}}
    <FaIcon @icon="circle-notch" @size="2x" class="icon-spin"/>
  {{else}}
    <FaIcon @icon="play" @size="2x"/>
  {{/if}}

</button>

