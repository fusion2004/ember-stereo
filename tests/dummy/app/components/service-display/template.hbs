<div class="service-display-sound-and-controls">
  <div class="service-display-current-sound">
    <p class="service-display-current-sound-title">
      {{currentSound.metadata.title}}
    </p>
    <p class="service-display-current-sound-url">
      {{currentSound.url}}
    </p>
    {{#if currentSound}}
      {{sound-display/position sound=currentSound class="service-display-current-sound-position"}}
    {{/if}}
  </div>

  <div class="service-display-controls">
    <div class="service-display-buttons">
      <button class="service-display-button-item" {{on "click" (fn (hifi-rewind))}}>
        {{fa-icon "backward" size="2x"}}
      </button>

      <button class="service-display-button-item" {{on "click" (fn (hifi-toggle-play))}}>
        {{#if (is-loading)}}
          {{fa-icon "circle-notch" size="2x" class="icon-spin"}}
        {{else if (is-playing)}}
          {{fa-icon "pause" size="2x"}}
        {{else}}
          {{fa-icon "play" size="2x"}}
        {{/if}}
      </button>

      <button class="service-display-button-item" {{on "click" (fn (hifi-fast-forward))}}>
        {{fa-icon "forward" size="2x"}}
      </button>

      <button class="service-display-button-item" {{on "click" (fn (hifi-stop))}}>
        {{fa-icon "stop" size="2x"}}
      </button>
    </div>
    <div class="service-display-volume">
      {{input type="range" value=this.hifi.volume min=0 max=100}}
    </div>

  </div>
</div>
<div class="diagnostic-debug">
  <h3>Events</h3>
  <EventDisplay @service={{this.hifi}} />
</div>
<a href="#" class="diagnostic-debug-toggle" {{action (toggle "showDebugInfo" this)}}>
  {{#if showDebugInfo}}
    <span>Hide Debug</span>
    {{fa-icon "angle-up"}}
  {{else}}
    <span>Show Debug</span>
    {{fa-icon "angle-down"}}
  {{/if}}
</a>
