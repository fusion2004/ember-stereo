{{! template-lint-disable no-inline-styles }}

<DocsDemo as |demo|>
  <demo.example @name='service-errors-silence-errors.hbs'>
    <p>You can silence the thrown errors and handle them inline</p>
    <div style='flex place-content-between'>
      <button
        {{on
          'click'
          (fn this.togglePlaySound 'https://invalid.example.url/1.mp3')
        }}
        type='button'
        class='ui-button'
      >
        {{#if this.sound.isPlaying}}
          Pause
        {{else}}
          Play Sound
        {{/if}}
      </button>
    </div>

    {{#if this.error}}
      <div class='text-danger text-sm px-1 py-2'>{{this.error}}</div>
    {{/if}}
  </demo.example>
  {{demo.snippet 'service-errors-silence-errors.js'}}
  {{demo.snippet 'service-errors-silence-errors.hbs'}}
</DocsDemo>