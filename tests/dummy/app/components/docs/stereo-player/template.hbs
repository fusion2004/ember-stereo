<div class="stereo-player">
  <div class="stereo-player-controls">
    <button type="button" {{on 'click' (fastforward-sound @url increment=5000)}} disabled={{not (sound-is-rewindable @url)}}
      class="stereo-button">
      {{svg-jar "skip-backward-outline" height=20 width=30 title="Skip Forward"}}
    </button>

    <button type="button" {{on 'click' (toggle-play-sound @url)}} class="stereo-button">
      {{#if (sound-is-playing @url)}}
      {{svg-jar "pause-outline" height=20 width=30 title="Pause"}}
      {{else if (sound-is-loaded @url)}}
      {{svg-jar "resume-outline" height=20 width=30 title="Pause"}}
      {{else if (sound-is-loading @url)}}
      {{svg-jar "loading-outline" height=20 width=30 title="Loading" class="icon-spin"}}
      {{else}}
      {{svg-jar "play-outline" height=20 width=30 title="Play"}}
      {{/if}}
    </button>

    <button type="button" {{on 'click' (fastforward-sound @url increment=5000)}} disabled={{not (sound-is-fastforwardable
      @url)}} class="stereo-button">
      {{svg-jar "skip-forward-outline" height=20 width=30 title="Skip Forward"}}
    </button>
  </div>

  <div class="stereo-player-position">
    {{sound-position @url format='time'}}
    <span class="range-container">
      <Input type="range" @value={{sound-position @url format='percentage' }} {{on 'change' (seek-sound @url)}} disabled={{not
      (sound-is-seekable @url)}} />
    </span>
    {{sound-duration @url format='time'}}
  </div>
</div>
{{#if (sound-is-errored @url)}}
<div class="stereo-player-errors">
  {{sound-error-details @url}}
</div>
{{/if}}


{{!-- END-SNIPPET --}}